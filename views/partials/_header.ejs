<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <!-- Sign in status and logout button -->
    <% if (user) { %>
      <form class="form-inline" method="POST" action="/logout">
        <div class="form-group mb-2">
          <p style="width: 300px; margin: 1em; font-weight: bold;">Logged in As: <%= user['email'] %></p>
          <button type="submit" class="btn btn-primary">Logout</button>
        </div>
      </form>
    <% } else { %>
    <!-- Button link to login and register page -->
    <form class="form-inline" method="GET" action="/register" style="margin-right: 10px;">
      <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Register</button>
      </div>
    </form>
    <form class="form-inline" method="GET" action="/login">
      <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </form>
    <% } %>


  </nav>
</header>